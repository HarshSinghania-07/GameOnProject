<header>
    <h1>
        Login page
    </h1>
</header>

<form method="POST" id="login-form">

    <label id="labelEmail" for="email"> Enter Email: </label>
    <input id="email" type="text" placeholder="Enter Email" name="email" value="{{email}}" />

    <label id="labelPassword" for="password"> Enter a password: </label>
    <input id="password" type="password" placeholder="Enter password" name="password" value="{{password}}" />

    <button id="btnlogin">Login</button>
</form>
<ul id="error">
</ul>
<a href="/user/signup">Need to register? Click here to sign-up</a>

<script src="/public/js/signin.js"></script>